{
  "name": "Label Studio Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "docker-in-docker": "latest"
  },
  "workspaceFolder": "/workspaces/ai4me-cookbook/cloud/label-studio-demo",
  "postCreateCommand": "cd /workspaces/ai4me-cookbook/cloud/label-studio-demo && docker-compose up -d",
  "forwardPorts": [8080],
  "mounts": [
    "source=labelstudio-data,target=/workspace/data,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": ["ms-azuretools.vscode-docker"]
    }
  }
}
